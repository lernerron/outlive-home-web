# Auth configuration for independent deployments
# Set true to enforce authentication before rendering routes.
VITE_AUTH_REQUIRED=false

# Login URL for redirect when VITE_AUTH_REQUIRED=true and user is not authenticated.
# Example: https://your-auth-domain.com/login
VITE_AUTH_LOGIN_URL=

# Optional: If using Supabase later in this migration.
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Lead endpoint for form submissions.
# Default in code is /api/leads (Vercel serverless route in this repo).
# Set this only if using an external API URL.
VITE_LEADS_API_URL=

# Server-side lead forwarding destination (Vercel env vars).
# If set, /api/leads forwards validated payloads to this URL.
LEADS_WEBHOOK_URL=
LEADS_WEBHOOK_SECRET=

# Optional CORS origin for /api/leads responses.
# Example: https://www.yourdomain.com
LEADS_CORS_ORIGIN=
